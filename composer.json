{
    "name": "tigusigalpa/yandex-cloud-client-php",
    "description": "PHP SDK для работы с Yandex Cloud API с поддержкой Laravel. Управление организациями, облаками, каталогами и авторизацией.",
    "type": "library",
    "keywords": [
        "yandex",
        "cloud",
        "api",
        "laravel",
        "php",
        "sdk",
        "organization",
        "folder",
        "iam"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Igor Sazonov",
            "email": "sovletig@gmail.com",
            "homepage": "https://github.com/tigusigalpa"
        }
    ],
    "homepage": "https://github.com/tigusigalpa/yandex-cloud-client-php",
    "support": {
        "issues": "https://github.com/tigusigalpa/yandex-cloud-client-php/issues",
        "source": "https://github.com/tigusigalpa/yandex-cloud-client-php"
    },
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0|^11.0",
        "orchestra/testbench": "^6.0|^7.0|^8.0|^9.0",
        "mockery/mockery": "^1.5",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "suggest": {
        "illuminate/support": "Required for Laravel integration (^8.0|^9.0|^10.0|^11.0|^12.0)"
    },
    "autoload": {
        "psr-4": {
            "Tigusigalpa\\YandexCloudClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tigusigalpa\\YandexCloudClient\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src --level=8",
        "cs-check": "phpcs src tests --standard=PSR12",
        "cs-fix": "phpcbf src tests --standard=PSR12"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Tigusigalpa\\YandexCloudClient\\Laravel\\YandexCloudServiceProvider"
            ],
            "aliases": {
                "YandexCloud": "Tigusigalpa\\YandexCloudClient\\Laravel\\Facades\\YandexCloud"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
